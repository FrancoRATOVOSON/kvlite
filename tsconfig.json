{
  "compilerOptions": {
    "lib": [
      "ES2023",
      "DOM"
    ],
    "module": "ES2015",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "declarationMap": false,
    "sourceMap": false,
    "outDir": "dist/esm",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}